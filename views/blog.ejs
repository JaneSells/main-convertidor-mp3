<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/times-new-roman" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/youtube2mp3icon.png" type="image/x-icon" >
    <title>YT2MP3 Magic - Blog</title>
</head>
<body>

<style>
/* Force scroll on the body */
html, body {
  height: 100%; /* Ensure body takes full height */
  overflow-y: scroll; /* Force vertical scrolling */
  margin: 0;
  padding: 0;
}

/* Ensure .blog-container doesnâ€™t restrict height */
.blog-container {
  max-width: 1200px;
  margin: 80px auto 0; /* Space from the top to avoid overlap with header */
  padding: 20px;
  overflow: auto; /* Ensure container is scrollable if content overflows */
}

/* Check for any potential overflow issues */
header, footer, .blog-container {
  overflow: visible; /* Ensure overflow is not restricted */
}

/* Additional blog post layout */
.blog-post {
  background-color: #222;
  color: white;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  width: calc(33.333% - 20px); /* Fits three posts per row */
  margin-top: 20px;
  transition: transform 0.3s ease;
}

/* Single column on smaller screens */
@media (max-width: 600px) {
  .blog-post {
    width: 100%; /* Single column */
  }
}
</style>

    <%- include('partials/header') %>

    <div class="blog-container">
        <% posts.forEach(post => { %>
            <div class="blog-post">
                <% if (post.thumbnail) { %>
                    <img src="<%= post.thumbnail %>" alt="<%= post.title %> Thumbnail" class="blog-thumbnail">
                <% } %>
                <h2><a href="/blog/<%= post.fileName %>"><%= post.title %></a></h2>
                <small>Published on: <%= post.date %></small>
                <p><%= post.description %></p>
                <a href="/blog/<%= post.fileName %>">Read more</a>
            </div>
        <% }) %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
